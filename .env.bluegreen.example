# Configuration Blue/Green Deployment
# Copier ce fichier en .env et ajuster les valeurs

# Registry Configuration
REGISTRY=ghcr.io
IMAGE_NAME=username/cloudnativeapplicationcurse
IMAGE_TAG=latest

# Database Configuration
POSTGRES_DB=gym_management
POSTGRES_USER=postgres
POSTGRES_PASSWORD=postgres
DATABASE_URL=postgresql://postgres:postgres@postgres:5432/gym_management?schema=public

# Application Configuration
NODE_ENV=production
PORT=3000
FRONTEND_URL=http://localhost

# Proxy Configuration
PROXY_PORT=8080

# GitHub Actions (CI/CD)
GHCR_USER=github-username
GHCR_TOKEN=github-token
GITHUB_SHA=latest
